.wrap {
  margin-left: 32rpx;
  margin-right: 32rpx;
  border-bottom: 1px solid #F2F2F2;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 10px;
  padding-bottom: 10px;
}
.wrap .left-view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: space-between;
  -webkit-align-items: space-between;
          align-items: space-between;
  width: 86%;
}
.wrap .left-view-title {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333232;
}
.wrap .left-view-desc {
  color: #A3A3A3;
  font-size: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.wrap .left-view-desc view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.wrap .left-view-desc view:nth-child(1) {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-right: 15rpx;
}
.wrap .left-view-desc view:nth-child(2) {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.wrap .left-view-stat {
  height: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
  /*justify-content: space-between;*/
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #9A9A9A;
}
.wrap .left-view-stat-praisenum .praise-icon-class {
  width: 32rpx;
  height: 20rpx;
  margin-right: 13rpx;
}
.wrap .left-view-stat .score-css {
  margin-left: 20rpx;
}
.wrap .left-view-stat .score-css .score-icon-class {
  margin-right: 12rpx;
  width: 32rpx;
  height: 32rpx;
}
.wrap .left-view-stat-readnum {
  margin-right: 46rpx;
}
.wrap .left-view-stat-readnum .view-icon-class {
  width: 24rpx;
  height: 24rpx;
  margin-right: 15rpx;
}
.wrap .right-view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 14%;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.wrap .right-view .bg-view {
  width: 50rpx;
  height: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
